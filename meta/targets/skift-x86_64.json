{
    "$schema": "https://schemas.cute.engineering/stable/cutekit.manifest.target.v1",
    "id": "skift-x86_64",
    "type": "target",
    "props": {
        "toolchain": "clang",
        "arch": "x86_64",
        "sys": "skift",
        "abi": "sysv",
        "bits": "64",
        "freestanding": false,
        "host": false,
        "sys-encoding": "utf8",
        "sys-line-ending": "lf",
        "sys-path-separator": "slash",
        "sys-terminal": "ansi"
    },
    "tools": {
        "cc": {
            "cmd": "{shell.latest('clang')}",
            "args": [
                "-target",
                "x86_64-none-elf"
            ]
        },
        "cxx": {
            "cmd": "{shell.latest('clang++')}",
            "args": [
                "-target",
                "x86_64-none-elf"
            ]
        },
        "ld": {
            "cmd": "{shell.latest('ld.lld')}",
            "args": [
                "-m",
                "elf_x86_64",
                "-T{utils.relpath('skift-x86_64.ld')}",
                "-z",
                "max-page-size=0x1000"
            ],
            "files": [
                "{utils.relpath('skift-x86_64.ld')}"
            ]
        },
        "ar": {
            "cmd": "{shell.latest('llvm-ar')}",
            "args": [
                "rcs"
            ]
        },
        "as": {
            "cmd": "nasm",
            "args": [
                "-f",
                "elf64"
            ]
        }
    }
}
