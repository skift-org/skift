{
    "$schema": "https://schemas.cute.engineering/stable/cutekit.manifest.component.v1",
    "id": "hjert-riscv",
    "type": "lib",
    "description": "The Hjert micro-kernel platform layer for riscv",
    "enableIf": {
        "sys": [
            "kernel"
        ],
        "arch": [
            "riscv32",
            "riscv64"
        ]
    },
    "requires": [
        "hal-riscv",
        "hjert-core",
        "vaerk-dtb"
    ],
    "injects": [
        "hjert"
    ]
}
